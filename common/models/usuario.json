{
  "name": "Usuario",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "telephone": {
      "type": "number"
    },
    "gender": {
      "type": "string"
    },
    "photo": {
      "type": "string"
    },
    "location": {
      "type": "geopoint",
      "required": true
    },
    "rating": {
      "type": "number",
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "anuncios": {
      "type": "hasMany",
      "model": "Anuncio",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "getUser"
    }
  ],
  "methods": {
    "getUser": {
      "accepts": [
        {
          "arg": "context",
          "type": "object",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "User",
          "type": "object",
          "root": false,
          "description": "un user logeado"
        }
      ],
      "description": "Devuelve al usuario loggeado",
      "http": [
        {
          "path": "/getUser",
          "verb": "get"
        }
      ]
    }
  }
}
