{
  "name": "Anuncio",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "titulo": {
      "type": "string",
      "required": true
    },
    "presupMAX": {
      "type": "number",
      "required": true
    },
    "materialsINC": {
      "type": "boolean",
      "required": true
    },
    "location": {
      "type": "geopoint",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "city": {
      "type": "string",
      "required": false
    },
    "date": {
      "type": "date",
      "required": true
    },
    "visitas": {
      "type": "number",
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "usuario": {
      "type": "belongsTo",
      "model": "Usuario",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    },
    "solicitud": {
      "type": "hasMany",
      "model": "Empresa",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      },
      "through": "Solicitud"
    },   
    "solicitudes": {
      "type": "hasMany",
      "model": "Solicitud",
      "foreignKey": "anuncioId",
      "options": {
        "nestRemoting": false
      }
    },
    "categoria": {
      "type": "belongsTo",
      "model": "Category",
      "foreignKey": "",
      "options": {
        "nestRemoting": false
      }
    },
    "multimedia": {
      "type": "hasMany",
      "model": "Multimedia",
      "foreignKey": "anuncioId",
      "options": {
        "nestRemoting": false
      }
    },
    "solicitudAcept": {
      "type": "belongsTo",
      "model": "Solicitud",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
  ],
  "methods": {
    "GetByPaginatione": {
      "accepts": [
        {
          "arg": "title",
          "type": "string",
          "required": false,
          "description": "title of ad",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "category",
          "type": "number",
          "required": false,
          "description": "category",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "page",
          "type": "number",
          "required": true,
          "description": "number of page",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "adsPerPage",
          "type": "number",
          "required": true,
          "description": "ads per pager are required",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "position",
          "type": "object",
          "required": false,
          "description": "current postion",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": [
        {
          "arg": "ads",
          "type": "array",
          "root": true,
          "description": "All ads in this page"
        }
      ],
      "description": "Get ads by paginatione given page and ads per page",
      "http": [
        {
          "path": "/getByPaginatione",
          "verb": "get"
        }
      ]
    },
    "getMyAds": {
      "accepts": [
        {
          "arg": "context",
          "type": "object",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "Ads",
          "type": "array",
          "root": true,
          "description": "todos los anuncios del usuario loggeado"
        }
      ],
      "description": "todos los anuncios del usuario loggeado",
      "http": [
        {
          "path": "/getMyAds",
          "verb": "get"
        }
      ]
    },
    "getAd": {
      "accepts": [
        {
          "arg": "ads",
          "type": "number",
          "required": true,
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": [
        {
          "arg": "ad",
          "type": "object",
          "root": false,
          "description": "Un unico anuncio"
        }
      ],
      "description": "un unico anuncio",
      "http": [
        {
          "path": "/getAd",
          "verb": "get"
        }
      ]
    }
  }
}